doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    style.
      svg {
        width:100%;
        height:500px;
        margin:0px auto;
      }

      body {
        font-family: sans-serif;
      }

      .country {
        stroke-width: 1px;
      }

      .country:hover {
        opacity: 1 !important;
        stroke: black !important;
        stroke-width: 1px !important;
      }

      div.tooltip {
        position: absolute;
        text-align: center;
        //width: 60px;
        //height: 28px;
        padding: 2px;
        font: 12px sans-serif;
        background: lightsteelblue;
        border: 0px;
        border-radius: 8px;
        pointer-events: none;
      }
  body
    include includes/header.pug

    include includes/mixins.pug

    // Output
    svg#map(style="width:1000px; margin:0 auto;").d-flex
    div(style="margin:0 auto").d-flex.flex-wrap.justify-content-center
      .flex-column
        // Input
        +inputSelect(
          "requisite-climate-financing-unit",
          "Present value of requisite climate financing",
          "Billion dollars",
          ["Billion dollars", "% of country GDP over [2024, Time Horizon]"]
        )

        include includes/common_user_inputs.pug

        +inputSelect(
          "discount-rate",
          "Discount rate œÅ",
          "2.8% (WACC)",
          ["2.8% (WACC)", "3.6% (WACC, average risk-premium 100 years)", "5%", "8%"]
        )


    script(src="https://d3js.org/d3.v7.min.js")
    script(src="https://d3js.org/topojson.v3.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
    script(src="js/iso-3166-data.js")
    script(src="js/climate_financing_map.js" type="module")
    script(type="module").
      import {calculate} from "./js/climate_financing_map.js"
      window.calculate = calculate
